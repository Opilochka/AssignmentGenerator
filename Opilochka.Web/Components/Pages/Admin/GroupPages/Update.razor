@page "/groups/update/{GroupId:long}"

@rendermode InteractiveServer

@inherits GroupBase

<div class="w-dvw p-5 px-10 text-white">
    <h1 class="mb-10 ml-2 text-3xl">Редактировать группу</h1>
    @if(GroupUpdate == null)
    {
        <p>Загрузка данных...</p>
    }
    else
    {
        <div class="ml-2 grid w-1/2 grid-cols-2 gap-x-5 text-white">
            <div class="mt-10">
                <label for="" class="text-sm/6 block font-semibold">Название</label>
                <div class="mt-2.5">
                    <input @bind-value="GroupUpdate.Name" type="text" class="px-3.5 block w-full rounded-md bg-white py-1 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600">
                </div>
            </div>
        </div>
        <div class="flex w-1/2 justify-center">
            <button @onclick="async => UpdateGroup()" class=" ml-2 mt-10 button-opacity-dark py-1 px-3 bg-purple-dark-4 rounded-sm cursor-pointer">Подтвердить</button>
        </div>
    }
</div>



