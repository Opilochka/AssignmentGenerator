@typeparam TEntity

<svg class="absolute left-2.5 top-1/2 transform -translate-y-1/2 bi bi-search" xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="black" viewBox="0 0 16 16">
    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
</svg>
<input @bind="searchItem" list="@Id" type="text" name="search" id="search" class="block w-55 rounded-md bg-white px-3.5 pl-10 py-1 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600">
<button @onclick="OnSearchClicked" class="button-opacity-dark px-8 bg-purple-dark-4 rounded-sm cursor-pointer">Поиск</button>

@code {
    [Parameter]
    public List<TEntity> Items { get; set; } = new();

    [Parameter]
    public EventCallback<string> OnSearch { get; set; }

    [Parameter]
    public string? Id { get; set; }

    public string searchItem = string.Empty;

    private async Task OnSearchClicked()
    {
        await OnSearch.InvokeAsync(searchItem);
    }
}
