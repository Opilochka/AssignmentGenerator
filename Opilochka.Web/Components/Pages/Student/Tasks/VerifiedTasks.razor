@page "/verified-task"

@inherits TaskBase

@rendermode InteractiveServer

<BgImage />

<div class="w-dvw text-white">
    @if(NoCheckTasks != null && CheckTasks != null)
    {
        @foreach (var task in NoCheckTasks)
        {
            <div class="mt-10 w-full px-10">
                <div class="bg-purple-dark-3 w-full space-y-10 rounded-sm px-10 py-5 shadow-xl">
                    <div class="flex justify-between">
                        <h1 class="text-2xl">
                            <a class="cursor-pointer">
                                @task.Title
                            </a>
                        </h1>
                        <div class="flex items-center space-x-1">
                            <div class="rounded-4xl size-4 bg-yellow-600"></div>
                            <div class="">Не проверено</div>
                        </div>
                    </div>
                    <div class="min-h-35 w-5/6 space-y-5">
                        <div>@task.Description</div>
                        @foreach (var lesson in Lessons)
                        {
                            @if (lesson.Id == task.LessonId)
                            {
                                <div>Урок: @lesson.Title</div>
                                break;
                            }
                        }
                    </div>
                </div>
            </div>
        }
        @foreach (var task in CheckTasks)
        {
            <div class="mt-10 w-full px-10">
                <div class="bg-purple-dark-3 w-full space-y-10 rounded-sm px-10 py-5 shadow-xl">
                    <div class="flex justify-between">
                        <h1 class="text-2xl">
                            <a class="cursor-pointer">
                                @task.Title
                            </a>
                        </h1>
                        <div class="flex items-center space-x-1">
                            <div class="rounded-4xl size-4 bg-green-600"></div>
                            <div class="">Проверено</div>
                        </div>
                    </div>
                    <div class="min-h-35 w-5/6 space-y-5">
                        <div>@task.Description</div>
                        @foreach (var lesson in Lessons)
                        {
                            @if (lesson.Id == task.LessonId)
                            {
                                <div>Урок: @lesson.Title</div>
                                break;
                            }
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="mt-10 w-full px-10">
            <div class="bg-purple-dark-3 w-full space-y-10 rounded-sm px-10 py-5 shadow-xl">
                <div class="text-2xl">Список заданий пуст</div>
            </div>
        </div>
    }
</div>

